{
  "name": "@peterek/vite-plugin-font",
  "version": "2.0.0",
  "description": "Vite plugin for simple use of custom fonts",
  "keywords": [
    "vite",
    "plugin",
    "font",
    "fonts"
  ],
  "author": {
    "name": "Jiri Peterek",
    "email": "jiri@peterek.net"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/peterekjs/vite-plugin-font/issues"
  },
  "homepage": "https://github.com/peterekjs/vite-plugin-font#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peterekjs/vite-plugin-font.git"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/font.cjs",
      "default": "./dist/font.js"
    },
    "./src/*": "./src/*"
  },
  "typesVersions": {
    ">=5": {
      "index": [
        "./dist/index.d.ts"
      ]
    }
  },
  "types": "./dist/index.d.ts",
  "typescript": {
    "definition": "./dist/index.d.ts"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "test": "vitest run",
    "test:dev": "vitest",
    "coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "glob": "^11.0.0"
  },
  "peerDependencies": {
    "vite": ">=5.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^2.1.8",
    "typescript": "^5.7.2",
    "vite": "^6.0.7",
    "vite-plugin-dts": "^4.4.0",
    "vitest": "^2.1.8"
  }
}
